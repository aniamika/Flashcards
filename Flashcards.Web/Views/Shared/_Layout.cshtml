<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Flashcards.Web</title>
    <link rel="stylesheet" href="~/styles/global/reset.css" />
    <link rel="stylesheet" href="~/styles/global/layout.css" />
    <link rel="stylesheet" href="~/styles/global/helpers.css" />
    <link rel="stylesheet" href="~/styles/global/fonts.css" />
    <link rel="stylesheet" href="~/styles/global/buttons.css" />
    <link rel="stylesheet" href="~/styles/global/icons.css" />
    <link rel="stylesheet" href="~/styles/global/inputs.css" />
    <link rel="stylesheet" href="~/styles/pages/home.css" />
    <link rel="stylesheet" href="~/styles/pages/flashcards-page.css" />
    <link rel="stylesheet" href="~/styles/pages/form-page.css" />
    <link rel="stylesheet" href="~/styles/components/header.css" />
    <link rel="stylesheet" href="~/styles/components/category-card.css" />
    <link rel="stylesheet" href="~/styles/components/flashcard.css" />
    <link rel="stylesheet" href="~/styles/components/form.css" />

</head>
<body>
    <header class="header">
        <a class="header__logo-container" asp-area="" asp-controller="Flashcards" asp-action="Index">
            <img src="~/assets/images/logo.svg" alt="flashcards logo" class="header__logo" />
            Flashcards
        </a>
        <nav class="header__navigation">
            <ul class="header__list">
                <li class="header__list-item">
                    <a class="" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                <li class="header__list-item">
                    <a class="">About</a>
                </li>
            </ul>
        </nav>
    </header>
    <main role="main" class="main">
        @RenderBody()
    </main>
    <footer class="footer">
        &copy; 2021 Karolina Jaklik &amp; Anna Mika. All rights reserved.
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
