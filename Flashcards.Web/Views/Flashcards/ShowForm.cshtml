@model JSFlashcardsModel

<h1>Add your flashcard</h1>

<form method="post">
	<div>
		<label asp-for="Title">Title</label>
		<input asp-for="Title" />
	</div>
	<div>
		<label asp-for="Description">Description</label>
		<input asp-for="Description" />
	</div>
	<div>
		<button type="submit">Add flashcard</button>
	</div>
</form>


